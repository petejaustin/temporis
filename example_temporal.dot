digraph temporal_game {
    // 2-player game vertices with simple naming
    v0 [name="v0", player=0];
    v1 [name="v1", player=1];
    v2 [name="v2", player=0];
    v3 [name="v3", player=1];
    v4 [name="v4", player=0];
    
    // Temporal edges with Presburger arithmetic constraints only
    v0 -> v1 [label="e0", constraint="t >= 2"];
    v1 -> v2 [label="e1", constraint="t = 3"];
    v2 -> v3 [label="e2", constraint="t <= 5"];
    v3 -> v4 [label="e3", constraint="t >= 4"];
    v0 -> v4 [label="e4"];  // No constraint - always active
}
