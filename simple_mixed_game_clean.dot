//interesting when t=3
//player 0 wins s0,s1 at time bound 3
digraph G {
  s0 [name="s0", player=0];
  s1 [name="s1", player=1];
  s2 [name="s2", player=0];
  target [name="target", player=0, target=1];
  
  s0 -> s1;
  s1 -> target [constraint="time == 2"];
  s0 -> s2 [constraint="time >= 1"];
  s2 -> target [constraint="time == 3"];
  s1 -> s1 [constraint="time != 2"];
}